{{!-- Header asking for a particular type of informtion --}}
<div class="container">
    <div class="row">
        <div class="col-md-12" id="question-header-text">Trait/Question Here</div>
    </div>

{{!-- Populate the page with the appropriate template depending on the question type --}}
  {{!-- 3 types (radio, one-click, and entry) --}}
  <div class="row">
    {{!-- Load select template with radio buttons on --}}
    {{#if question.radio}}
      {{> select isRadio=true}}

    {{!-- Load select template with radio buttons off --}}
    {{else if question.oneClick}}
      {{> select isRadio=false}}

    {{!-- Load user entry fied template --}}
    {{else if question.userEntry}}
      {{> userEntry }}
    {{/if}}

  {{!-- Skip button in case the user doesn't want to enter this particular data --}}
  </div>
  <div class="row">
    <div class="col-md-12">
      <button type="button" class="btn btn-danger" id="skip-question">Skip</button>
    </div>
  </div>
</div>